extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Suplier
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-table
					| Tables 
			li.active suplier 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Suplier
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/suplier/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Kode
									input(type='number',value="#{data.kode}",name='kode',placeholder='Enter Kode', disabled).form-control
								.form-group
									label
										| Nama
									input(type='text',value="#{ (nama == undefined) ? data.nama : nama }",name='nama',placeholder='Enter Nama' autofocus).form-control
								.form-group
									label
										| Alamat
									input(type='text',value="#{ (alamat == undefined) ? data.alamat : alamat }",name='alamat',placeholder='Enter Alamat').form-control
								.form-group
									label
										| Email
									input(type='text',value="#{ (email == undefined) ? data.email : email }",name='email',placeholder='Enter Email').form-control
								.form-group
									label
										| Telephone
									input(type='number',value="#{ (no_telp == undefined) ? data.no_telp : no_telp }",name='no_telp',placeholder='Enter Telephone').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/suplier').btn.btn-primary.pull-right
									| Back