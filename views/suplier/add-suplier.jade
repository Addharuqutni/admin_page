extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Tambah Suplier
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-table
					| Tables 
			li.active suplier 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Suplier
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/suplier/add')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| Kode
									input(type='number',name='kode',placeholder='Masukan Kode', autofocus).form-control
								.form-group
									label
										| Nama
									input(type='text',name='nama',placeholder='Masukan Nama').form-control
								.form-group
									label
										| Alamat
									input(type='text',name='alamat',placeholder='Masukan Alamat').form-control
								.form-group
									label
										| Email
									input(type='text',name='email',placeholder='Masukan Email').form-control
								.from-group
									label
										| No Telephone
									input(type='text',name='no_telp',placeholder='Masukan No Telephone').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/suplier').btn.btn-primary.pull-right
									| Back