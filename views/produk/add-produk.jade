extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Tambah Produk
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-table
					| Tables 
			li.active produk 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Produk
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/produk/add')
					.row
						.col-sm-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| Kode
									input(type='text',value='#{kode}',name='kode',placeholder='Enter Kode', autofocus).form-control
								.form-group
									label
										| Nama
									input(type='text',value='#{nama}',name='nama',placeholder='Enter Nama').form-control
								.form-group
									label
										| Merk
									input(type='text',value='#{merk}',name='merk',placeholder='Enter Merk').form-control
								.form-group
									label
										| Satuan
									input(type='numeric',value='#{satuan}',name='satuan',placeholder='Enter Satuan').form-control
								.form-group
									label
										| Jumlah
									input(type='numeric',value='#{jumlah}',name='jumlah',placeholder='Enter Jumlah').form-control
								.form-group
									label
										| Harga
									input(type='numeric',value='#{harga}',name='harga',placeholder='Enter Harga').form-control
                                
							.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/produk').btn.btn-primary.pull-right
									| Back