extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Produk
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-table
					| Tables 
			li.active produk 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Produk
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/produk/edit/#{(id==undefined) ? data.id : id}')
					.row
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Kode
									input(type='number',value="#{data.kode}",name='kode',placeholder='Enter Kode', disabled).form-control
								.form-group
									label
										| Nama
									input(type='text',value="#{ (nama == undefined) ? data.nama : nama }",name='nama',placeholder='Enter Nama' autofocus).form-control
								.form-group
									label
										| Merk
									input(type='text',value="#{ (merk == undefined) ? data.merk : merk }",name='merk',placeholder='Enter Merk').form-control
								.form-group
									label
										| Satuan
									input(type='text',value="#{ (satuan == undefined) ? data.satuan : satuan }",name='satuan',placeholder='Enter Satuan').form-control
								.from-group
									label
										| Jumlah
									input(type='text',value="#{ (jumlah == undefined) ? data.jumlah : jumlah }",name='jumlah',placeholder='Enter Jumlah').form-control
								.from-group
									label
										| Harga
									input(type='text',value="#{ (harga == undefined) ? data.harga : harga }",name='harga',placeholder='Enter Harga').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/produk').btn.btn-primary.pull-right
									| Back